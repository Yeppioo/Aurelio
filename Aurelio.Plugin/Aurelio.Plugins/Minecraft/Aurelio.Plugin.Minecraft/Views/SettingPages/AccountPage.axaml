<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Aurelio.Plugin.Minecraft.Views.SettingPages.AccountPage"
    x:DataType="settingPages:AccountPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:converter="clr-namespace:Aurelio.Public.Module.Converter"
    xmlns:converter1="clr-namespace:Aurelio.Public.Module.Converter;assembly=Aurelio"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="clr-namespace:Aurelio.Public.Const"
    xmlns:lsv="using:LiteSkinViewer3D.Avalonia.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:minecraft="clr-namespace:Aurelio.Plugin.Minecraft.Classes.Minecraft"
    xmlns:minecraft1="clr-namespace:Aurelio.Plugin.Minecraft"
    xmlns:properties="clr-namespace:Aurelio.Public.Langs;assembly=Aurelio"
    xmlns:settingPages="clr-namespace:Aurelio.Plugin.Minecraft.Views.SettingPages"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:ui="clr-namespace:Aurelio.Public.Module.Ui;assembly=Aurelio"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <converter1:BoolReversalConverter x:Key="BoolReversalConverter" />
    </UserControl.Resources>
    <Border Name="Root">
        <Border Margin="15,0,15,15">
            <Grid ColumnDefinitions="*, Auto, 330">
                <Border
                    Classes="card"
                    Grid.Column="0"
                    Margin="0,0,5,0">
                    <DockPanel>
                        <DockPanel
                            Dock="Top"
                            LastChildFill="False"
                            Margin="0,10,0,0">
                            <u:IconButton
                                Content="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.AddNewAccount}"
                                Margin="10,0,0,0"
                                x:Name="AddAccount">
                                <u:IconButton.Icon>
                                    <PathIcon
                                        Data="{x:Static ui:Icons.Plus}"
                                        Height="13"
                                        Width="13" />
                                </u:IconButton.Icon>
                            </u:IconButton>
                            <u:IconButton
                                Content="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.Open3DView}"
                                Margin="10,0,0,0"
                                x:Name="Open3DView">
                                <u:IconButton.Icon>
                                    <PathIcon
                                        Data="{x:Static ui:Icons.Model3D}"
                                        Height="14"
                                        Width="14" />
                                </u:IconButton.Icon>
                            </u:IconButton>
                            <u:IconButton
                                Content="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.DelSelectedItem}"
                                Margin="10,0,0,0"
                                x:Name="DelSelectedAccount">
                                <u:IconButton.Icon>
                                    <PathIcon
                                        Data="{x:Static ui:Icons.Eraser}"
                                        Height="14"
                                        Width="14" />
                                </u:IconButton.Icon>
                            </u:IconButton>
                        </DockPanel>
                        <ListBox
                            DockPanel.Dock="Bottom"
                            ItemsSource="{Binding Data.MinecraftPluginSettingEntry.MinecraftAccounts}"
                            Margin="5"
                            SelectedItem="{Binding Data.MinecraftPluginSettingEntry.UsingMinecraftAccount}"
                            x:Name="AccountsListView">
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="minecraft:RecordMinecraftAccount">
                                    <Border Margin="0,6">
                                        <DockPanel>
                                            <Border
                                                ClipToBounds="True"
                                                CornerRadius="3,3,3,3"
                                                Height="32"
                                                Margin="2,0,10,0"
                                                Width="32">
                                                <Image Source="{Binding Head}" />
                                            </Border>
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="5">
                                                    <TextBlock
                                                        FontSize="14"
                                                        Text="{Binding Name}"
                                                        VerticalAlignment="Bottom" />
                                                    <TextBlock FontSize="11" VerticalAlignment="Bottom">
                                                        <Run Text="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.LastUsedTime}" />
                                                        <Run Text=": " />
                                                        <Run Text="{Binding FormatLastUsedTime}" />
                                                    </TextBlock>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="5">
                                                    <TextBlock FontSize="11" Text="{Binding AccountType}" />
                                                    <TextBlock FontSize="11" Text="{Binding UUID}" />
                                                </StackPanel>
                                            </StackPanel>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Border>
                <GridSplitter Grid.Column="1" ShowsPreview="True" />
                <Border
                    Classes="card"
                    Grid.Column="2"
                    Margin="5,0,0,0">
                    <Border
                        ClipToBounds="True"
                        CornerRadius="10"
                        Margin="10">
                        <Grid>
                            <lsv:SkinViewer3D
                                IsEnableAnimation="True"
                                IsVisible="{Binding Data.IsRender3D}"
                                Margin="0,0,0,40"
                                Name="skinViewer" />
                            <Image
                                IsVisible="{Binding Data.IsRender3D, Converter={StaticResource BoolReversalConverter}}"
                                Margin="55,55,55,90"
                                Source="{Binding Data.MinecraftPluginSettingEntry.UsingMinecraftAccount.Body}" />
                            <ToggleSwitch
                                HorizontalAlignment="Center"
                                IsChecked="{Binding Data.IsRender3D}"
                                Margin="0,0,0,10"
                                OffContent="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.View2D}"
                                OnContent="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.View3D}"
                                VerticalAlignment="Bottom" />
                        </Grid>
                    </Border>
                </Border>
            </Grid>
        </Border>
    </Border>
</UserControl>