<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Aurelio.Plugin.Minecraft.Views.FetcherPages.Vanilla.InstallPreview"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:converter="clr-namespace:Aurelio.Public.Module.Converter;assembly=Aurelio"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:network="clr-namespace:MinecraftLaunch.Base.Models.Network;assembly=MinecraftLaunch.Base"
    xmlns:properties="clr-namespace:Aurelio.Public.Langs;assembly=Aurelio"
    xmlns:vanilla="clr-namespace:Aurelio.Plugin.Minecraft.Views.FetcherPages.Vanilla"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <converter:BoolReversalConverter x:Key="BoolReversalConverter" />
    </UserControl.Resources>
    <UserControl.DataContext>
        <vanilla:InstallPreview />
    </UserControl.DataContext>
    <Border Name="Root">
        <ScrollViewer>
            <DockPanel Margin="10,0,10,10">
                <Border
                    ClipToBounds="True"
                    CornerRadius="{DynamicResource CardCornerRadius}"
                    VerticalAlignment="Stretch">
                    <StackPanel Margin="10" Spacing="15">
                        <Border
                            Background="{DynamicResource CardBackgroundColor}"
                            CornerRadius="{DynamicResource CardCornerRadius}"
                            Padding="10"
                            VerticalAlignment="Top">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.InstallPreview}" />
                                <DockPanel DockPanel.Dock="Top">
                                    <DockPanel DockPanel.Dock="Left" Margin="0,0,0,5">
                                        <TextBlock
                                            DockPanel.Dock="Top"
                                            FontSize="15"
                                            Margin="2,0,0,0"
                                            Name="InstallPreviewIdText"
                                            Text="{Binding MinecraftVersion.Id}" />
                                        <TextBlock
                                            DockPanel.Dock="Top"
                                            FontSize="12"
                                            Foreground="{DynamicResource GrayColor}"
                                            Margin="2,0,0,0"
                                            Name="InstallPreviewAdditionalInstallText"
                                            Text="{Binding AdditionInstall}" />
                                    </DockPanel>
                                    <DockPanel
                                        DockPanel.Dock="Right"
                                        HorizontalAlignment="Right"
                                        Margin="0,0,0,5"
                                        VerticalAlignment="Top">
                                        <Button
                                            Click="BeginInstallBtn_OnClick"
                                            Content="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.BeginInstall}"
                                            IsEnabled="{Binding HasValidationError, Converter={StaticResource BoolReversalConverter}}"
                                            Margin="5,0,0,0"
                                            Name="BeginInstallBtn" />
                                    </DockPanel>
                                </DockPanel>
                                <TextBlock
                                    DockPanel.Dock="Bottom"
                                    FontSize="12"
                                    Foreground="Orange"
                                    IsVisible="{Binding ShowNamingWarning}"
                                    Margin="1,5,0,0">
                                    <Run Text="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.TheVersionNameWillBeRenamedTo}" />
                                    <Run Text=":" />
                                    <Run Text="{Binding NamingPreview}" />
                                </TextBlock>
                                <TextBlock
                                    DockPanel.Dock="Bottom"
                                    FontSize="12"
                                    Foreground="Red"
                                    IsVisible="{Binding HasValidationError}"
                                    Margin="1,5,0,0">
                                    <Run Text="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.Error}" />
                                    <Run Text=":" />
                                    <Run Text="{Binding ValidationMessage}" />
                                </TextBlock>
                                <TextBox DockPanel.Dock="Bottom" Text="{Binding CustomInstallationId}" />
                            </DockPanel>
                        </Border>
                        <Border
                            Background="{DynamicResource CardBackgroundColor}"
                            CornerRadius="{DynamicResource CardCornerRadius}"
                            Cursor="Hand"
                            Name="ReturnToListRoot"
                            Padding="10"
                            PointerPressed="ReturnToListRoot_OnPointerPressed"
                            VerticalAlignment="Top">
                            <DockPanel>
                                <Image
                                    DockPanel.Dock="Right"
                                    Height="12"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,5,0"
                                    Width="15">
                                    <Image.Source>
                                        <DrawingImage>
                                            <DrawingImage.Drawing>
                                                <GeometryDrawing Brush="{DynamicResource TextColor}">
                                                    <GeometryDrawing.Geometry>
                                                        <PathGeometry Figures="M384,170.5C395.6669921875,170.5,405.6669921875,174.66700744628906,414,183L713,482C721.3330078125,490.3330078125 725.5,500.3330078125 725.5,512 725.5,523.6669921875 721.3330078125,533.6669921875 713,542L414,841C405.6669921875,849.3330078125 395.6669921875,853.5 384,853.5 372,853.5 361.9169921875,849.25 353.75,840.75 345.5830078125,832.25 341.5,822.1669921875 341.5,810.5 341.5,798.8330078125 345.6669921875,788.8330078125 354,780.5L622.5,512 354,243.5C345.6669921875,235.16700744628906 341.5,225.16700744628906 341.5,213.5 341.5,201.83299255371094 345.5830078125,191.75 353.75,183.25 361.9169921875,174.75 372,170.5 384,170.5z" />
                                                    </GeometryDrawing.Geometry>
                                                </GeometryDrawing>
                                            </DrawingImage.Drawing>
                                        </DrawingImage>
                                    </Image.Source>
                                </Image>
                                <TextBlock
                                    DockPanel.Dock="Right"
                                    Margin="2,0,0,0"
                                    Name="MinecraftPreviewGameId"
                                    Text="{Binding MinecraftVersion.Id}" />
                                <TextBlock
                                    DockPanel.Dock="Right"
                                    Margin="2,0,0,0"
                                    Text="Minecraft" />
                            </DockPanel>
                        </Border>
                        <Border
                            Background="{DynamicResource CardBackgroundColor}"
                            CornerRadius="{DynamicResource CardCornerRadius}"
                            Padding="0,5">
                            <Expander>
                                <Expander.Header>
                                    <TextBlock>
                                        <Run Text="OptiFine" />
                                        <Run Text=" - " />
                                        <Run Text="{Binding SelectedOptiFineVersion}" />
                                    </TextBlock>
                                </Expander.Header>
                                <Grid>
                                    <ListBox
                                        Height="250"
                                        ItemsSource="{Binding OptiFineVersions}"
                                        Margin="0,10"
                                        SelectedItem="{Binding SelectedOptiFine}"
                                        SelectionMode="Toggle">
                                        <ListBox.Styles>
                                            <Style Selector="ListBoxItem">
                                                <Setter Property="Margin" Value="5,1" />
                                            </Style>
                                        </ListBox.Styles>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate DataType="network:OptifineInstallEntry">
                                                <TextBlock Margin="0,2">
                                                    <Run Text="{Binding Type}" />
                                                    <Run Text="{Binding Patch}" />
                                                </TextBlock>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <TextBlock
                                        Foreground="{DynamicResource GrayColor}"
                                        IsVisible="{Binding IsOptiFineEmpty}"
                                        Name="NoOptifine"
                                        Text="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.NoAvailableItem}" />
                                    <controls:ProgressRing
                                        Height="50"
                                        IsVisible="{Binding IsOptiFineLoading}"
                                        Name="OptiFineLoading"
                                        Width="50" />
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        IsVisible="{Binding HasOptiFineError}"
                                        Spacing="10">
                                        <TextBlock
                                            Foreground="Red"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.LoadFail}" />
                                        <Button
                                            Content="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.Reload}"
                                            HorizontalAlignment="Center"
                                            Name="RetryOptiFineBtn" />
                                    </StackPanel>
                                </Grid>
                            </Expander>
                        </Border>
                        <Border
                            Background="{DynamicResource CardBackgroundColor}"
                            CornerRadius="{DynamicResource CardCornerRadius}"
                            Padding="0,5">
                            <Expander>
                                <Expander.Header>
                                    <TextBlock>
                                        <Run Text="Forge" />
                                        <Run Text=" - " />
                                        <Run Text="{Binding SelectedForgeVersion}" />
                                    </TextBlock>
                                </Expander.Header>
                                <Grid>
                                    <ListBox
                                        Height="250"
                                        ItemsSource="{Binding ForgeVersions}"
                                        Margin="0,10"
                                        SelectedItem="{Binding SelectedForge}"
                                        SelectionMode="Toggle">
                                        <ListBox.Styles>
                                            <Style Selector="ListBoxItem">
                                                <Setter Property="Margin" Value="5,1" />
                                            </Style>
                                        </ListBox.Styles>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate DataType="network:ForgeInstallEntry">
                                                <TextBlock Margin="0,2" Text="{Binding ForgeVersion}" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <TextBlock
                                        Foreground="{DynamicResource GrayColor}"
                                        IsVisible="{Binding IsForgeEmpty}"
                                        Name="NoForge"
                                        Text="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.NoAvailableItem}" />
                                    <controls:ProgressRing
                                        Height="50"
                                        IsVisible="{Binding IsForgeLoading}"
                                        Name="ForgeLoading"
                                        Width="50" />
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        IsVisible="{Binding HasForgeError}"
                                        Spacing="10">
                                        <TextBlock
                                            Foreground="Red"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.LoadFail}" />
                                        <Button
                                            Content="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.Reload}"
                                            HorizontalAlignment="Center"
                                            Name="RetryForgeBtn" />
                                    </StackPanel>
                                </Grid>
                            </Expander>
                        </Border>
                        <Border
                            Background="{DynamicResource CardBackgroundColor}"
                            CornerRadius="{DynamicResource CardCornerRadius}"
                            Padding="0,5">
                            <Expander>
                                <Expander.Header>
                                    <TextBlock>
                                        <Run Text="NeoForge" />
                                        <Run Text=" - " />
                                        <Run Text="{Binding SelectedNeoForgeVersion}" />
                                    </TextBlock>
                                </Expander.Header>
                                <Grid>
                                    <ListBox
                                        Height="250"
                                        ItemsSource="{Binding NeoForgeVersions}"
                                        Margin="0,10"
                                        SelectedItem="{Binding SelectedNeoForge}"
                                        SelectionMode="Toggle">
                                        <ListBox.Styles>
                                            <Style Selector="ListBoxItem">
                                                <Setter Property="Margin" Value="5,1" />
                                            </Style>
                                        </ListBox.Styles>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate DataType="network:ForgeInstallEntry">
                                                <TextBlock Margin="0,2" Text="{Binding ForgeVersion}" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <TextBlock
                                        Foreground="{DynamicResource GrayColor}"
                                        IsVisible="{Binding IsNeoForgeEmpty}"
                                        Name="NoNeoForge"
                                        Text="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.NoAvailableItem}" />
                                    <controls:ProgressRing
                                        Height="50"
                                        IsVisible="{Binding IsNeoForgeLoading}"
                                        Name="NeoForgeLoading"
                                        Width="50" />
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        IsVisible="{Binding HasNeoForgeError}"
                                        Spacing="10">
                                        <TextBlock
                                            Foreground="Red"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.LoadFail}" />
                                        <Button
                                            Content="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.Reload}"
                                            HorizontalAlignment="Center"
                                            Name="RetryNeoForgeBtn" />
                                    </StackPanel>
                                </Grid>
                            </Expander>
                        </Border>
                        <Border
                            Background="{DynamicResource CardBackgroundColor}"
                            CornerRadius="{DynamicResource CardCornerRadius}"
                            Padding="0,5">
                            <Expander>
                                <Expander.Header>
                                    <TextBlock>
                                        <Run Text="Fabric" />
                                        <Run Text=" - " />
                                        <Run Text="{Binding SelectedFabricVersion}" />
                                    </TextBlock>
                                </Expander.Header>
                                <Grid>
                                    <ListBox
                                        Height="250"
                                        ItemsSource="{Binding FabricVersions}"
                                        Margin="0,10"
                                        SelectedItem="{Binding SelectedFabric}"
                                        SelectionMode="Toggle">
                                        <ListBox.Styles>
                                            <Style Selector="ListBoxItem">
                                                <Setter Property="Margin" Value="5,1" />
                                            </Style>
                                        </ListBox.Styles>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate DataType="network:FabricInstallEntry">
                                                <TextBlock Margin="0,2" Text="{Binding BuildVersion}" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <TextBlock
                                        Foreground="{DynamicResource GrayColor}"
                                        IsVisible="{Binding IsFabricEmpty}"
                                        Name="NoFabric"
                                        Text="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.NoAvailableItem}" />
                                    <controls:ProgressRing
                                        Height="50"
                                        IsVisible="{Binding IsFabricLoading}"
                                        Name="FabricLoading"
                                        Width="50" />
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        IsVisible="{Binding HasFabricError}"
                                        Spacing="10">
                                        <TextBlock
                                            Foreground="Red"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.LoadFail}" />
                                        <Button
                                            Content="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.Reload}"
                                            HorizontalAlignment="Center"
                                            Name="RetryFabricBtn" />
                                    </StackPanel>
                                </Grid>
                            </Expander>
                        </Border>
                        <Border
                            Background="{DynamicResource CardBackgroundColor}"
                            CornerRadius="{DynamicResource CardCornerRadius}"
                            Padding="0,5">
                            <Expander>
                                <Expander.Header>
                                    <TextBlock>
                                        <Run Text="Quilt" />
                                        <Run Text=" - " />
                                        <Run Text="{Binding SelectedQuiltVersion}" />
                                    </TextBlock>
                                </Expander.Header>
                                <Grid>
                                    <ListBox
                                        Height="250"
                                        ItemsSource="{Binding QuiltVersions}"
                                        Margin="0,10"
                                        SelectedItem="{Binding SelectedQuilt}"
                                        SelectionMode="Toggle">
                                        <ListBox.Styles>
                                            <Style Selector="ListBoxItem">
                                                <Setter Property="Margin" Value="5,1" />
                                            </Style>
                                        </ListBox.Styles>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate DataType="network:QuiltInstallEntry">
                                                <TextBlock Margin="0,2" Text="{Binding BuildVersion}" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <TextBlock
                                        Foreground="{DynamicResource GrayColor}"
                                        IsVisible="{Binding IsQuiltEmpty}"
                                        Name="NoQuilt"
                                        Text="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.NoAvailableItem}" />
                                    <controls:ProgressRing
                                        Height="50"
                                        IsVisible="{Binding IsQuiltLoading}"
                                        Name="QuiltLoading"
                                        Width="50" />
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        IsVisible="{Binding HasQuiltError}"
                                        Spacing="10">
                                        <TextBlock
                                            Foreground="Red"
                                            HorizontalAlignment="Center"
                                            Text="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.LoadFail}" />
                                        <Button
                                            Content="{Binding Source={x:Static properties:MainLangProvider.Current}, Path=Resources.Reload}"
                                            HorizontalAlignment="Center"
                                            Name="RetryQuilteBtn" />
                                    </StackPanel>
                                </Grid>
                            </Expander>
                        </Border>
                    </StackPanel>
                </Border>
            </DockPanel>
        </ScrollViewer>
    </Border>

</UserControl>
