<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Aurelio.Views.Main.Template.SubPages.MinecraftInstancePages.ResourcePackPage"
    x:DataType="minecraftInstancePages:ResourcePackPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:minecraft="clr-namespace:Aurelio.Public.Classes.Minecraft"
    xmlns:minecraftInstancePages="clr-namespace:Aurelio.Views.Main.Template.SubPages.MinecraftInstancePages"
    xmlns:properties="clr-namespace:Aurelio.Public.Langs"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Name="Root">
        <Border
            Background="{DynamicResource CardBackgroundColor}"
            CornerRadius="{DynamicResource CardCornerRadius}"
            Margin="15,0,15,15">
            <Grid>
                <DockPanel>
                    <DockPanel
                        DockPanel.Dock="Top"
                        Margin="7"
                        VerticalAlignment="Top">
                        <Button Content="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.SelectAll}" Name="SelectAllModBtn" />
                        <Button
                            Content="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.DeselectAll}"
                            Margin="5,0,0,0"
                            Name="DeselectAllModBtn" />
                        <Button
                            Content="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.OpenFolder}"
                            Margin="5,0,0,0"
                            Name="OpenFolderBtn" />
                        <Button
                            Content="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.DeleteSelect}"
                            Margin="5,0,0,0"
                            Name="DeleteSelectModBtn" />
                        <Button
                            Content="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.Refresh}"
                            Margin="5,0,0,0"
                            Name="RefreshModBtn" />
                        <TextBox
                            HorizontalAlignment="Stretch"
                            Margin="5,0,0,0"
                            Name="ModSearchBox"
                            Text="{Binding Filter}"
                            Watermark="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.SearchKeyword}" />
                    </DockPanel>
                    <ListBox
                        DockPanel.Dock="Bottom"
                        ItemsSource="{Binding FilteredItems}"
                        Margin="5"
                        Name="ModManageList"
                        SelectionMode="Multiple,Toggle">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Margin" Value="5,1" />
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="minecraft:MinecraftLocalResourcePackEntry">
                                <Border Margin="0,6">
                                    <DockPanel>
                                        <Border
                                            ClipToBounds="True"
                                            CornerRadius="3,3,3,3"
                                            Height="28"
                                            Margin="2,0,6.5,0"
                                            Width="28">
                                            <Image Source="{Binding Icon}" />
                                        </Border>
                                        <Grid>
                                            <TextBlock FontSize="14" Text="{Binding Name}" />
                                            <StackPanel Margin="0,17,0,0" Orientation="Horizontal">
                                                <TextBlock
                                                    FontSize="11"
                                                    Foreground="{DynamicResource GrayColor}"
                                                    Margin="0,0,0,0"
                                                    Text="{Binding Description}" />
                                            </StackPanel>
                                        </Grid>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
                <TextBlock
                    Foreground="{DynamicResource GrayColor}"
                    HorizontalAlignment="Right"
                    Margin="0,40,10,0"
                    Name="SelectedModCount" />
                <TextBlock
                    Foreground="{DynamicResource GrayColor}"
                    HorizontalAlignment="Center"
                    Margin="0,100,0,0"
                    Name="NoMatchResultTip"
                    Text="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.NoMatchResult}" />
            </Grid>
        </Border>
    </Border>
</UserControl>
