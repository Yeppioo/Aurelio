<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Aurelio.Views.Main.Pages.HomeTabPage"
    x:DataType="pages:HomeTabPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:c="clr-namespace:Aurelio.Public.Const"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entries="clr-namespace:Aurelio.Public.Classes.Entries"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:Aurelio.Views.Main.Pages"
    xmlns:properties="clr-namespace:Aurelio.Public.Langs"
    xmlns:psge="clr-namespace:Aurelio.Public.Classes.Entries.Page"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Name="Root">
        <DockPanel>
            <DockPanel
                DockPanel.Dock="Top"
                Margin="15,5,15,0"
                VerticalAlignment="Top">
                <TextBox
                    BorderThickness="0"
                    CornerRadius="{DynamicResource CardCornerRadius}"
                    Padding="10,0,8,0"
                    Watermark="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.Search}">
                    <TextBox.InnerRightContent>
                        <PathIcon
                            Data="{StaticResource SemiIconSearchStroked}"
                            Foreground="{DynamicResource TextColor}"
                            Height="14"
                            Margin="0,0,3,0"
                            Width="14" />
                    </TextBox.InnerRightContent>
                </TextBox>
            </DockPanel>

            <ScrollViewer>
                <ScrollViewer.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <ResourceInclude Source="avares://Semi.Avalonia/Controls/Expander.axaml" />
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </ScrollViewer.Resources>
                <StackPanel Margin="20,15,20,10">
                    <!-- <Expander Header="All Instance" /> -->
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Border>
</UserControl>