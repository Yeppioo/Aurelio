                                <TextBlock
                                    DockPanel.Dock="Left"
                                    FontSize="16"
                                    HorizontalAlignment="Left"
                                    Margin="10,0,0,0"
                                    Text="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.OpenRecentContent}"
                                    VerticalAlignment="Center" />
