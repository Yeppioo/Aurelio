<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Aurelio.Views.Main.Pages.HomeTabPage"
    x:DataType="pages:HomeTabPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:c="clr-namespace:Aurelio.Public.Const"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entries="clr-namespace:Aurelio.Public.Classes.Entries"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:minecraft="clr-namespace:Aurelio.Public.Classes.Minecraft"
    xmlns:pages="clr-namespace:Aurelio.Views.Main.Pages"
    xmlns:properties="clr-namespace:Aurelio.Public.Langs"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Name="Root">
        <DockPanel>
            <DockPanel
                DockPanel.Dock="Top"
                Margin="15,5,15,0"
                VerticalAlignment="Top">
                <DockPanel>
                    <Button
                        Background="{DynamicResource CardBackgroundColor}"
                        Content="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.Search}"
                        DockPanel.Dock="Right"
                        Margin="10,0,0,0"
                        Name="SearchButton" />
                    <TextBox
                        Background="{DynamicResource CardBackgroundColor}"
                        BorderThickness="0"
                        CornerRadius="{DynamicResource CardCornerRadius}"
                        DockPanel.Dock="Left"
                        Name="SearchBox"
                        Padding="10,0,8,0"
                        Text="{Binding SearchText}"
                        Watermark="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.EnterSearchTip}">
                        <TextBox.InnerRightContent>
                            <PathIcon
                                Data="{StaticResource SemiIconSearchStroked}"
                                Foreground="{DynamicResource TextColor}"
                                Height="14"
                                Margin="0,0,3,0"
                                Width="14" />
                        </TextBox.InnerRightContent>
                    </TextBox>
                </DockPanel>
            </DockPanel>

            <Border
                ClipToBounds="True"
                CornerRadius="{DynamicResource CardCornerRadius}"
                Margin="15,10,15,15"
                Name="MinecraftCardsContainerRoot">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding Data.MinecraftInstances}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="minecraft:MinecraftCategoryEntry">
                                <Border
                                    Classes="card"
                                    IsVisible="{Binding Visible}"
                                    Margin="0,0,0,10">
                                    <Expander Classes="over-expander" IsExpanded="{Binding Expanded, Mode=TwoWay}">
                                        <Expander.Header>
                                            <DockPanel>
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                                <Border
                                                    Background="{DynamicResource SystemAccentColor}"
                                                    CornerRadius="10"
                                                    Height="4"
                                                    Margin="15,0,0,0"
                                                    VerticalAlignment="Center" />
                                            </DockPanel>
                                        </Expander.Header>
                                        <Border HorizontalAlignment="Stretch" Margin="10">
                                            <ItemsControl ItemsSource="{Binding Minecrafts}" HorizontalAlignment="Stretch">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <UniformGrid Name="MinecraftCardsGrid" Columns="{Binding Path=ContainerWidth, RelativeSource={RelativeSource AncestorType=pages:HomeTabPage}, Converter={x:Static c:UiProperty.ContainerToColumnsConverter}}"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate DataType="minecraft:RecordMinecraftEntry">
                                                        <Border
                                                            Classes="card2x"
                                                            Height="68"
                                                            Margin="5"
                                                            Name="MinecraftCardBorder">
                                                            <Border.Styles>
                                                                <Style Selector="Border#MinecraftCardBorder:pointerover">
                                                                    <Style Selector="^ Border#IconBorder">
                                                                        <Setter Property="CornerRadius" Value="60" />
                                                                        <Setter Property="Background" Value="{DynamicResource SystemAccentColor}" />
                                                                    </Style>
                                                                    <Style Selector="^ Image">
                                                                        <Setter Property="IsVisible" Value="False" />
                                                                    </Style>
                                                                </Style>
                                                            </Border.Styles>
                                                            <DockPanel>
                                                                <Border
                                                                    Background="{DynamicResource CardBackgroundColor}"
                                                                    ClipToBounds="True"
                                                                    CornerRadius="{DynamicResource CardCornerRadius}"
                                                                    Cursor="Hand"
                                                                    Height="48"
                                                                    Margin="10,0"
                                                                    Name="IconBorder"
                                                                    Width="48">
                                                                    <Border.Transitions>
                                                                        <Transitions>
                                                                            <CornerRadiusTransition Duration="0.15" Property="CornerRadius" />
                                                                            <!-- <BrushTransition Duration="0:0:0.15" Property="Background" /> -->
                                                                        </Transitions>
                                                                    </Border.Transitions>
                                                                    <Grid>
                                                                        <PathIcon
                                                                            Cursor="Hand"
                                                                            Data="M73 39c-14.8-9.1-33.4-9.4-48.5-.9S0 62.6 0 80L0 432c0 17.4 9.4 33.4 24.5 41.9s33.7 8.1 48.5-.9L361 297c14.3-8.7 23-24.2 23-41s-8.7-32.2-23-41L73 39z"
                                                                            HorizontalAlignment="Center"
                                                                            Margin="0,0,-5,0"
                                                                            VerticalAlignment="Center" />
                                                                        <Image Source="{Binding Icon}" />
                                                                    </Grid>
                                                                </Border>
                                                                <DockPanel VerticalAlignment="Center">
                                                                    <TextBlock
                                                                        DockPanel.Dock="Top"
                                                                        Text="{Binding Id}"
                                                                        TextTrimming="CharacterEllipsis" />
                                                                    <TextBlock
                                                                        DockPanel.Dock="Bottom"
                                                                        Text="{Binding ShortDescription}"
                                                                        TextTrimming="CharacterEllipsis" />
                                                                </DockPanel>
                                                            </DockPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Border>
                                    </Expander>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </DockPanel>
    </Border>
</UserControl>