<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Aurelio.Views.Main.Pages.ViewerSelector"
    x:DataType="pages:ViewerSelector"
    xmlns="https://github.com/avaloniaui"
    xmlns:converter="clr-namespace:Aurelio.Public.Module.Converter;assembly=Aurelio"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:Aurelio.Views.Main.Pages"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <converter:ContainerToColumnsConverter x:Key="ContainerToColumnsConverter" />
    </UserControl.Resources>
    <Grid Name="Root">
        <Border
            ClipToBounds="True"
            CornerRadius="{DynamicResource CardCornerRadius}"
            Margin="10,0,10,10">
            <ScrollViewer Padding="0,0,10,0">
                <ItemsControl ItemsSource="{Binding Viewers}" VerticalAlignment="Top">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid
                                Columns="{Binding Path=ContainerWidth, RelativeSource={RelativeSource AncestorType=pages:ViewerSelector}, Converter={StaticResource ContainerToColumnsConverter}}"
                                Name="ViewerCardsGrid"
                                VerticalAlignment="Top" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="pages:ViewerSelectorEntry">
                            <Border
                                Classes="card2x"
                                Cursor="Hand"
                                Height="56"
                                Margin="5"
                                Name="ViewerCardBorder"
                                PointerPressed="ViewerCardBorder_OnPointerPressed"
                                Tag="{Binding}">
                                <DockPanel>
                                    <Border
                                        ClipToBounds="True"
                                        CornerRadius="{DynamicResource CardCornerRadius}"
                                        Height="48"
                                        Margin="10,0"
                                        Name="IconBorder"
                                        Tag="{Binding}"
                                        Width="48">
                                        <PathIcon
                                            Data="{Binding ViewerInfo.Icon}"
                                            Foreground="{DynamicResource TextColor}"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,-5,0"
                                            VerticalAlignment="Center" />
                                    </Border>
                                    <DockPanel VerticalAlignment="Center">
                                        <TextBlock
                                            DockPanel.Dock="Top"
                                            Text="{Binding ViewerInfo.Title}"
                                            TextTrimming="CharacterEllipsis" />
                                    </DockPanel>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
