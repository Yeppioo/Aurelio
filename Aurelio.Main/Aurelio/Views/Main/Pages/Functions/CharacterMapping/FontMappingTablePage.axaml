<UserControl
    Name="Root"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Aurelio.Views.Main.Pages.Functions.CharacterMapping.FontMappingTablePage"
    x:DataType="characterMapping:FontMappingTablePage"
    xmlns="https://github.com/avaloniaui"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:characterMapping="clr-namespace:Aurelio.Views.Main.Pages.Functions.CharacterMapping"
    xmlns:converter="clr-namespace:Aurelio.ViewModels.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fontMapping="clr-namespace:Aurelio.Public.Classes.Entries.Functions.FontMapping"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <converter:FamilyTypefacesConverter x:Key="FamilyTypefacesConverter" />
        <converter:FamilyTypefacesToWeightListConverter x:Key="FamilyTypefacesToWeightListConverter" />
        <converter:FamilyTypefacesToStyleListConverter x:Key="FamilyTypefacesToStyleListConverter" />
    </UserControl.Resources>

    <Grid>
        <suki:GlassCard
            Classes="HeaderCard"
            Margin="20,10,20,20"
            Name="Card">
            <suki:GroupBox Name="GroupBox">
                <suki:GroupBox.Header>
                    <Grid>
                        <DockPanel>
                            <StackPanel
                                DockPanel.Dock="Left"
                                HorizontalAlignment="Left"
                                Margin="5,0,0,0"
                                VerticalAlignment="Center">
                                <SelectableTextBlock
                                    FontSize="12"
                                    Foreground="{DynamicResource GrayColor}"
                                    Margin="0,-2,-15,3"
                                    Name="CharacterCountTextBlock"
                                    VerticalAlignment="Bottom" />
                                <SelectableTextBlock
                                    FontFamily="{Binding Current}"
                                    FontSize="19"
                                    Foreground="{DynamicResource GrayColor}"
                                    Name="SelectableTextBlock"
                                    Text="{Binding Current.Name}" />
                            </StackPanel>
                            <StackPanel
                                DockPanel.Dock="Right"
                                HorizontalAlignment="Right"
                                Margin="0,0,16,0"
                                Orientation="Horizontal"
                                Spacing="20"
                                VerticalAlignment="Center">
                                <!-- <Button Classes="no-background-button"> -->
                                <!--  <avalonia:MaterialIcon  -->
                                <!--  Height="18"  -->
                                <!--  Kind="InfoOutline"  -->
                                <!--  Width="18" />  -->
                                <!-- </Button> -->
                                <Button Classes="no-background-button" Click="ToggleButton_OnClick">
                                    <avalonia:MaterialIcon
                                        Height="18"
                                        Kind="SwapHorizontal"
                                        Width="18" />
                                </Button>
                                <Button Classes="no-background-button">
                                    <avalonia:MaterialIcon
                                        Height="18"
                                        Kind="FilterCheckOutline"
                                        Width="18" />
                                    <Button.Flyout>
                                        <Flyout>
                                            <Border
                                                Background="{DynamicResource PageBackground}"
                                                CornerRadius="8"
                                                MaxHeight="610"
                                                Padding="15"
                                                VerticalAlignment="Top"
                                                Width="450">
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        BlurRadius="5"
                                                        Color="Black"
                                                        OffsetX="0"
                                                        OffsetY="0"
                                                        Opacity="0.3" />
                                                </Border.Effect>
                                                <ScrollViewer>
                                                    <ItemsRepeater ItemsSource="{Binding BlockFilters}">
                                                        <ItemsRepeater.Layout>
                                                            <UniformGridLayout MaximumRowsOrColumns="2" />
                                                        </ItemsRepeater.Layout>
                                                        <ItemsRepeater.ItemTemplate>
                                                            <DataTemplate>
                                                                <CheckBox
                                                                    Content="{Binding Name}"
                                                                    IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                                    Margin="5"
                                                                    Width="200" />
                                                            </DataTemplate>
                                                        </ItemsRepeater.ItemTemplate>
                                                    </ItemsRepeater>
                                                </ScrollViewer>
                                            </Border>
                                        </Flyout>
                                    </Button.Flyout>
                                </Button>
                                <Button Classes="no-background-button">
                                    <avalonia:MaterialIcon
                                        Height="18"
                                        Kind="DotsHorizontal"
                                        Width="18" />
                                </Button>
                            </StackPanel>
                            <StackPanel
                                DockPanel.Dock="Right"
                                HorizontalAlignment="Right"
                                Margin="0,0,20,0"
                                Orientation="Horizontal"
                                Spacing="10"
                                VerticalAlignment="Center">
                                <ComboBox ItemsSource="{Binding Current, Converter={StaticResource FamilyTypefacesToStyleListConverter}}" SelectedItem="{Binding SelectedFontStyle}" />
                                <ComboBox ItemsSource="{Binding Current, Converter={StaticResource FamilyTypefacesToWeightListConverter}}" SelectedItem="{Binding SelectedFontWeight}" />
                            </StackPanel>
                        </DockPanel>
                    </Grid>
                </suki:GroupBox.Header>

                <Grid>
                    <Grid ColumnDefinitions="*, 2, 290">
                        <ScrollViewer Grid.Column="0" Margin="0,0,5,0">
                            <ItemsRepeater ItemsSource="{Binding CharacterBlocks}">
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate DataType="fontMapping:CharacterBlock">
                                        <StackPanel>
                                            <TextBlock
                                                Foreground="{DynamicResource GrayColor}"
                                                Margin="0,10,0,40"
                                                Text="{Binding Name}" />
                                            <ItemsRepeater
                                                HorizontalAlignment="Center"
                                                ItemsSource="{Binding Characters}"
                                                Margin="0,0,10,0">
                                                <ItemsRepeater.Layout>
                                                    <UniformGridLayout
                                                        ItemsJustification="Start"
                                                        ItemsStretch="Fill"
                                                        MinItemHeight="80"
                                                        MinItemWidth="80" />
                                                </ItemsRepeater.Layout>

                                                <ItemsRepeater.ItemTemplate>
                                                    <DataTemplate x:DataType="fontMapping:CharacterEntry">
                                                        <TextBlock
                                                            Background="Transparent"
                                                            FontFamily="{Binding Current, ElementName=Root}"
                                                            FontSize="32"
                                                            FontStyle="{Binding SelectedFontStyle, ElementName=Root}"
                                                            FontWeight="{Binding SelectedFontWeight, ElementName=Root}"
                                                            Height="80"
                                                            PointerPressed="Button_OnClick"
                                                            Tag="{Binding}"
                                                            Text="{Binding Char}"
                                                            TextAlignment="Center"
                                                            Width="80">
                                                            <TextBlock.Transitions>
                                                                <Transitions>
                                                                    <DoubleTransition Duration="0:0:0.05" Property="FontSize" />
                                                                </Transitions>
                                                            </TextBlock.Transitions>

                                                            <TextBlock.Styles>
                                                                <Style Selector="TextBlock">
                                                                    <Setter Property="FontSize" Value="32" />
                                                                </Style>

                                                                <Style Selector="TextBlock:pointerover">
                                                                    <Setter Property="FontSize" Value="40" />
                                                                </Style>
                                                            </TextBlock.Styles>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ItemsRepeater.ItemTemplate>
                                            </ItemsRepeater>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                        </ScrollViewer>

                        <GridSplitter
                            Background="{DynamicResource GrayColor}"
                            Grid.Column="1"
                            MinWidth="5"
                            ResizeDirection="Columns" />

                        <DockPanel Grid.Column="2">
                            <DockPanel Dock="Bottom" VerticalAlignment="Bottom">
                                <DockPanel Dock="Top">
                                    <StackPanel
                                        DockPanel.Dock="Left"
                                        HorizontalAlignment="Left"
                                        Margin="10,0,0,5">
                                        <SelectableTextBlock Name="SCName" TextWrapping="Wrap" />
                                        <SelectableTextBlock
                                            FontSize="12"
                                            Foreground="{DynamicResource GrayColor}"
                                            Margin="0,-2,0,0"
                                            Name="SCInfo"
                                            TextWrapping="Wrap" />
                                    </StackPanel>

                                    <Button Classes="no-background-button">
                                        <avalonia:MaterialIcon
                                            DockPanel.Dock="Right"
                                            Height="18"
                                            HorizontalAlignment="Right"
                                            Kind="DotsHorizontal"
                                            Width="18" />
                                    </Button>
                                </DockPanel>

                                <Border
                                    Background="{DynamicResource GrayColor}"
                                    DockPanel.Dock="Top"
                                    Height="1"
                                    Margin="10,2,0,2" />

                                <StackPanel Margin="10,0,0,0" Spacing="3">
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{DynamicResource GrayColor}"
                                        Text="Xaml"
                                        TextWrapping="Wrap" />

                                    <SelectableTextBlock
                                        FontSize="13"
                                        Name="SCXaml"
                                        TextWrapping="Wrap" />

                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{DynamicResource GrayColor}"
                                        Text="FontIcon"
                                        TextWrapping="Wrap" />

                                    <SelectableTextBlock
                                        FontSize="13"
                                        Name="SCFontIcon"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </DockPanel>

                            <!--  <Label  -->
                            <!--  FontFamily="{Binding Current}"  -->
                            <!--  FontSize="68"  -->
                            <!--  HorizontalAlignment="Center"  -->
                            <!--  Margin="20,0,10,0"  -->
                            <!--  Name="Label"  -->
                            <!--  VerticalAlignment="Center" />  -->
                            <Svg
                                DockPanel.Dock="Top"
                                Margin="20,0,10,0"
                                Name="Svg" />
                        </DockPanel>
                    </Grid>
                    <Border
                        Background="#F8F9FB"
                        CornerRadius="6"
                        IsVisible="False"
                        Name="Border">
                        <Border.Transitions>
                            <Transitions>
                                <ThicknessTransition Duration="0:0:0.25" Property="Margin" />
                            </Transitions>
                        </Border.Transitions>
                        <DockPanel>
                            <TextBox
                                DockPanel.Dock="Top"
                                Text="{Binding ShowText}"
                                VerticalAlignment="Top" />
                            <ScrollViewer
                                HorizontalScrollBarVisibility="Auto"
                                Margin="0,10,0,0"
                                VerticalScrollBarVisibility="Auto">
                                <StackPanel Spacing="15">
                                    <StackPanel Spacing="5">
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="{DynamicResource GrayColor}"
                                            Text="12" />
                                        <TextBlock
                                            FontFamily="{Binding Current}"
                                            FontSize="12"
                                            FontStyle="{Binding SelectedFontStyle}"
                                            FontWeight="{Binding SelectedFontWeight}"
                                            Text="{Binding ShowText}" />
                                    </StackPanel>
                                    <StackPanel Spacing="5">
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="{DynamicResource GrayColor}"
                                            Text="18" />
                                        <TextBlock
                                            FontFamily="{Binding Current}"
                                            FontSize="18"
                                            FontStyle="{Binding SelectedFontStyle}"
                                            FontWeight="{Binding SelectedFontWeight}"
                                            Text="{Binding ShowText}" />
                                    </StackPanel>
                                    <StackPanel Spacing="5">
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="{DynamicResource GrayColor}"
                                            Text="24" />
                                        <TextBlock
                                            FontFamily="{Binding Current}"
                                            FontSize="24"
                                            FontStyle="{Binding SelectedFontStyle}"
                                            FontWeight="{Binding SelectedFontWeight}"
                                            Text="{Binding ShowText}" />
                                    </StackPanel>
                                    <StackPanel Spacing="5">
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="{DynamicResource GrayColor}"
                                            Text="48" />
                                        <TextBlock
                                            FontFamily="{Binding Current}"
                                            FontSize="48"
                                            FontStyle="{Binding SelectedFontStyle}"
                                            FontWeight="{Binding SelectedFontWeight}"
                                            Text="{Binding ShowText}" />
                                    </StackPanel>
                                    <StackPanel Spacing="5">
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="{DynamicResource GrayColor}"
                                            Text="72" />
                                        <TextBlock
                                            FontFamily="{Binding Current}"
                                            FontSize="72"
                                            FontStyle="{Binding SelectedFontStyle}"
                                            FontWeight="{Binding SelectedFontWeight}"
                                            Text="{Binding ShowText}" />
                                    </StackPanel>
                                    <StackPanel Spacing="5">
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="{DynamicResource GrayColor}"
                                            Text="96" />
                                        <TextBlock
                                            FontFamily="{Binding Current}"
                                            FontSize="96"
                                            FontStyle="{Binding SelectedFontStyle}"
                                            FontWeight="{Binding SelectedFontWeight}"
                                            Text="{Binding ShowText}" />
                                    </StackPanel>
                                    <StackPanel Spacing="5">
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="{DynamicResource GrayColor}"
                                            Text="110" />
                                        <TextBlock
                                            FontFamily="{Binding Current}"
                                            FontSize="110"
                                            FontStyle="{Binding SelectedFontStyle}"
                                            FontWeight="{Binding SelectedFontWeight}"
                                            Text="{Binding ShowText}" />
                                    </StackPanel>
                                    <StackPanel Spacing="5">
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="{DynamicResource GrayColor}"
                                            Text="134" />
                                        <TextBlock
                                            FontFamily="{Binding Current}"
                                            FontSize="134"
                                            FontStyle="{Binding SelectedFontStyle}"
                                            FontWeight="{Binding SelectedFontWeight}"
                                            Text="{Binding ShowText}" />
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </DockPanel>
                    </Border>
                </Grid>
            </suki:GroupBox>
        </suki:GlassCard>
    </Grid>
</UserControl>