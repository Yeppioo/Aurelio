<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:iri="https://irihi.tech/shared"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTheme TargetType="u:OverlayDialogHost" x:Key="{x:Type u:OverlayDialogHost}">
        <Setter Property="OverlayMaskBrush" Value="{DynamicResource OverlayDialogMaskBrush}" />
    </ControlTheme>

    <ControlTheme TargetType="u:CustomDialogControl" x:Key="{x:Type u:CustomDialogControl}">
        <Setter Property="MinWidth" Value="{DynamicResource DialogMinWidth}" />
        <Setter Property="MinHeight" Value="{DynamicResource DialogMinHeight}" />
        <Setter Property="CornerRadius" Value="{DynamicResource DialogCornerRadius}" />
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Duration="0.2" Property="RenderTransform" />
            </Transitions>
        </Setter>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="RenderTransform" Value="scale(1.0)" />
        <Setter Property="Template">
            <ControlTemplate TargetType="u:CustomDialogControl">
                <Panel>
                    <Border
                        Background="{DynamicResource WindowBackgroundColor}"
                        Classes="Shadow"
                        ClipToBounds="False"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Focusable="True"
                        HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                        IsHitTestVisible="True"
                        Name="PART_Border"
                        Padding="0"
                        Theme="{DynamicResource CardBorder}"
                        VerticalAlignment="{TemplateBinding VerticalAlignment}">
                        <Border ClipToBounds="True" CornerRadius="{TemplateBinding CornerRadius}">
                            <Grid RowDefinitions="Auto, *">
                                <ScrollViewer
                                    Grid.Row="0"
                                    Grid.RowSpan="2"
                                    HorizontalScrollBarVisibility="{Binding (ScrollViewer.HorizontalScrollBarVisibility), RelativeSource={RelativeSource TemplatedParent}}"
                                    VerticalScrollBarVisibility="{Binding (ScrollViewer.VerticalScrollBarVisibility), RelativeSource={RelativeSource TemplatedParent}}">
                                    <ContentPresenter Content="{TemplateBinding Content}" Name="PART_ContentPresenter" />
                                </ScrollViewer>
                                <Grid ColumnDefinitions="*, Auto" Grid.Row="0">
                                    <Panel
                                        Background="Transparent"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Name="{x:Static u:DialogControlBase.PART_TitleArea}" />
                                    <Button
                                        DockPanel.Dock="Right"
                                        Grid.Column="1"
                                        Margin="0,24,24,0"
                                        Name="{x:Static u:MessageBoxWindow.PART_CloseButton}"
                                        Theme="{DynamicResource OverlayCloseButton}" />
                                </Grid>
                            </Grid>
                        </Border>
                    </Border>
                    <u:DialogResizer IsVisible="{TemplateBinding CanResize}" Margin="{Binding #PART_Border.Margin}" />
                </Panel>
            </ControlTemplate>
        </Setter>
        <Style Selector="^:full-screen">
            <Setter Property="CornerRadius" Value="0" />
            <Style Selector="^ /template/ Border#PART_Border">
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="Theme" Value="{x:Null}" />
                <Setter Property="Margin" Value="0" />
                <Setter Property="Background" Value="{DynamicResource WindowBackgroundColor}" />
            </Style>
        </Style>
        <Style Selector="^ /template/ Panel#PART_TitleArea">
            <Setter Property="ContextFlyout">
                <MenuFlyout>
                    <MenuItem Command="{Binding $parent[u:DialogControlBase].Close}" Header="{DynamicResource STRING_MENU_DIALOG_CLOSE}">
                        <MenuItem.Icon>
                            <PathIcon Data="{DynamicResource SemiIconClose}" Theme="{StaticResource InnerPathIcon}" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuFlyout>
            </Setter>
        </Style>
        <Style Selector="^:not(:modal) /template/ Panel#PART_TitleArea">
            <Setter Property="ContextFlyout">
                <MenuFlyout>
                    <MenuItem
                        Command="{Binding $parent[u:DialogControlBase].UpdateLayer}"
                        CommandParameter="{x:Static u:DialogLayerChangeType.BringForward}"
                        Header="{DynamicResource STRING_MENU_BRING_FORWARD}">
                        <MenuItem.Icon>
                            <PathIcon Data="{DynamicResource DialogArrangeBringForwardGlyph}" Theme="{StaticResource InnerPathIcon}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem
                        Command="{Binding $parent[u:DialogControlBase].UpdateLayer}"
                        CommandParameter="{x:Static u:DialogLayerChangeType.BringToFront}"
                        Header="{DynamicResource STRING_MENU_BRING_TO_FRONT}">
                        <MenuItem.Icon>
                            <PathIcon Data="{DynamicResource DialogArrangeBringToFrontGlyph}" Theme="{StaticResource InnerPathIcon}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem
                        Command="{Binding $parent[u:DialogControlBase].UpdateLayer}"
                        CommandParameter="{x:Static u:DialogLayerChangeType.SendBackward}"
                        Header="{DynamicResource STRING_MENU_SEND_BACKWARD}">
                        <MenuItem.Icon>
                            <PathIcon Data="{DynamicResource DialogArrangeSendBackwardGlyph}" Theme="{StaticResource InnerPathIcon}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem
                        Command="{Binding $parent[u:DialogControlBase].UpdateLayer}"
                        CommandParameter="{x:Static u:DialogLayerChangeType.SendToBack}"
                        Header="{DynamicResource STRING_MENU_SEND_TO_BACK}">
                        <MenuItem.Icon>
                            <PathIcon Data="{DynamicResource DialogArrangeSendToBackGlyph}" Theme="{StaticResource InnerPathIcon}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Command="{Binding $parent[u:DialogControlBase].Close}" Header="{DynamicResource STRING_MENU_DIALOG_CLOSE}">
                        <MenuItem.Icon>
                            <PathIcon Data="{DynamicResource SemiIconClose}" Theme="{StaticResource InnerPathIcon}" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuFlyout>
            </Setter>
        </Style>
    </ControlTheme>

